import sys
import os
from signal import signal, SIGINT, SIGPIPE, SIG_DFL

def die(error):
    sys.stderr.write("Error: %s\n" % error)
    sys.exit(1)

# Before doing anything, check that we're running at least version 2.5
if ''.join(map(str, sys.version_info[0:3])) < '250':
    die('Error: %s requires Python 2.5 or greater.\n' % sys.argv[0])

if __name__ == "__main__":
    # Ignore SIGPIPE signal for valid use cases such as piping output to "head"
    signal(SIGPIPE, SIG_DFL)
    signal(SIGINT, SIG_DFL)

    python_binary = sys.argv[0]
    binary = python_binary.replace("amps_tx_topic_index_dump", "amps_fast_tx_topic_index_dump")
    # Important to replace the first cmd-line arg after replace() above.
    if sys.argv[0] != binary:
        sys.argv[0] = binary
        os.execvp(binary, sys.argv) # Never returns

